<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="dinero.TransactionsPage">
    <ContentPage.Content>
        <StackLayout>
            <Label StyleClass="pageTitle">Transactions</Label>
            <ListView x:Name="Transactions">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Frame StyleClass="transactionItem">
                                <StackLayout>
                                    <StackLayout Orientation="Horizontal">
                                        <Label>Transaction</Label>
                                    </StackLayout>
                                </StackLayout>
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>